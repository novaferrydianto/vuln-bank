{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/security-scorecard.schema.json",
  "title": "Security Scorecard",
  "type": "object",
  "required": ["meta", "weights", "score", "grade_policy", "management_summary", "owasp", "epss", "sla", "assets"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["repo", "generated_at", "version"],
      "properties": {
        "repo": { "type": "string" },
        "generated_at": { "type": "string", "format": "date-time" },
        "version": { "type": "string" },
        "description": { "type": "string" }
      }
    },

    "weights": {
      "type": "object",
      "required": ["overall", "asset"],
      "properties": {
        "overall": {
          "type": "object",
          "required": ["owasp", "epss", "sla"],
          "properties": {
            "owasp": { "type": "number" },
            "epss": { "type": "number" },
            "sla": { "type": "number" }
          }
        },
        "asset": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "required": ["owasp", "epss", "sla"],
            "properties": {
              "owasp": { "type": "number" },
              "epss": { "type": "number" },
              "sla": { "type": "number" }
            }
          }
        }
      }
    },

    "score": {
      "type": "object",
      "required": ["overall", "grade", "components"],
      "properties": {
        "overall": { "type": "integer", "minimum": 0, "maximum": 100 },
        "grade": { "type": "string", "enum": ["A", "B", "C", "D", "F"] },
        "components": {
          "type": "object",
          "required": ["owasp", "epss", "sla"],
          "properties": {
            "owasp": { "type": "integer", "minimum": 0, "maximum": 100 },
            "epss": { "type": "integer", "minimum": 0, "maximum": 100 },
            "sla": { "type": "integer", "minimum": 0, "maximum": 100 }
          }
        }
      }
    },

    "grade_policy": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    },

    "management_summary": {
      "type": "object",
      "required": ["grade_rationale", "deployment_posture", "key_risks", "recommended_actions"],
      "properties": {
        "grade_rationale": { "type": "string" },
        "deployment_posture": { "type": "string" },
        "key_risks": {
          "type": "array",
          "items": { "type": "string" }
        },
        "recommended_actions": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },

    "owasp": {
      "type": "object",
      "required": ["score"],
      "properties": {
        "global": {
          "type": "object",
          "additionalProperties": { "type": "integer" }
        },
        "score": { "type": "integer", "minimum": 0, "maximum": 100 }
      }
    },

    "epss": {
      "type": "object",
      "required": ["high_risk_count", "score"],
      "properties": {
        "threshold": { "type": ["number", "null"] },
        "high_risk_count": { "type": "integer", "minimum": 0 },
        "score": { "type": "integer", "minimum": 0, "maximum": 100 },
        "top_cves": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["cve", "epss"],
            "properties": {
              "cve": { "type": "string" },
              "epss": { "type": "number" },
              "package": { "type": "string" }
            }
          }
        }
      }
    },

    "sla": {
      "type": "object",
      "required": ["score"],
      "properties": {
        "summary": { "type": "object" },
        "breaches": { "type": "object" },
        "breaches_by_severity": { "type": "object" },
        "breaches_by_asset": { "type": "object" },
        "score": { "type": "integer", "minimum": 0, "maximum": 100 }
      }
    },

    "assets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "score"],
        "properties": {
          "name": { "type": "string" },
          "type": { "type": "string" },
          "score": {
            "type": "object",
            "required": ["overall", "owasp", "epss", "sla"],
            "properties": {
              "overall": { "type": "integer", "minimum": 0, "maximum": 100 },
              "owasp": { "type": "integer", "minimum": 0, "maximum": 100 },
              "epss": { "type": "integer", "minimum": 0, "maximum": 100 },
              "sla": { "type": "integer", "minimum": 0, "maximum": 100 }
            }
          }
        }
      }
    }
  }
}
