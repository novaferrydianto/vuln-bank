{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ASVS Coverage Schema",
  "type": "object",
  "required": ["meta", "summary", "controls"],
  "properties": {
    "meta": {
      "type": "object",
      "required": ["asvs_version", "generated_at"],
      "properties": {
        "asvs_version": { "type": "string" },
        "generated_at": { "type": "string", "format": "date-time" },
        "repo": { "type": "string" }
      },
      "additionalProperties": true
    },
    "summary": {
      "type": "object",
      "required": ["total", "passed", "failed"],
      "properties": {
        "total": { "type": "integer", "minimum": 0 },
        "passed": { "type": "integer", "minimum": 0 },
        "failed": { "type": "integer", "minimum": 0 },
        "coverage_percent": { "type": "number", "minimum": 0, "maximum": 100 }
      },
      "additionalProperties": true
    },
    "controls": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "level", "status"],
        "properties": {
          "id": { "type": "string" },
          "level": { "type": "integer", "enum": [1, 2, 3] },
          "status": { "type": "string", "enum": ["PASS", "FAIL", "NOT_APPLICABLE"] },
          "evidence": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
