{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/defectdojo-sla-weekly.schema.json",
  "title": "DefectDojo SLA Weekly (Aggregated)",
  "type": "object",
  "required": [
    "generated_at",
    "window_days",
    "sla_days",
    "counts",
    "top_breaches"
  ],
  "properties": {
    "generated_at": {
      "type": "string",
      "format": "date-time"
    },

    "window_days": {
      "type": "integer",
      "minimum": 1
    },

    "sla_days": {
      "type": "object",
      "required": ["Critical", "High"],
      "properties": {
        "Critical": { "type": "integer", "minimum": 1 },
        "High": { "type": "integer", "minimum": 1 }
      }
    },

    "counts": {
      "type": "object",
      "required": ["considered", "breaches", "breaches_by_asset"],
      "properties": {
        "considered": { "type": "integer", "minimum": 0 },

        "breaches": {
          "type": "object",
          "required": ["Critical", "High"],
          "properties": {
            "Critical": { "type": "integer", "minimum": 0 },
            "High": { "type": "integer", "minimum": 0 }
          }
        },

        "breaches_by_asset": {
          "type": "object",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "Critical": { "type": "integer", "minimum": 0 },
              "High": { "type": "integer", "minimum": 0 }
            }
          }
        }
      }
    },

    "top_breaches": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "severity",
          "age_days",
          "title",
          "asset",
          "created",
          "url"
        ],
        "properties": {
          "id": { "type": "integer" },
          "severity": { "type": "string", "enum": ["Critical", "High"] },
          "age_days": { "type": "integer", "minimum": 0 },
          "title": { "type": "string" },
          "asset": { "type": "string", "enum": ["frontend", "backend", "db"] },
          "created": { "type": "string" },
          "url": { "type": "string" }
        }
      }
    }
  }
}
