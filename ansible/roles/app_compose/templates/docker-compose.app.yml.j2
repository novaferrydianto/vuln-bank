version: "3.9"

services:
  app:
    image: {{ vuln_bank_image | default('xbash81/vuln-bank:latest') }}
    container_name: vuln-bank
    restart: always
    env_file:
      - .env.vuln
    depends_on: []
    ports:
      - "5000:5000"
    healthcheck:
      test: ["CMD-SHELL", "curl -sf http://localhost:5000/ || exit 1"]
      interval: 10s
      timeout: 5s
      retries: 5
